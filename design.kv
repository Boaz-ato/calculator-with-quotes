<Calc_Input>
    font_size:25
<Calc_window>
    padding:10,10,10,0
    orientation: 'vertical'
    spacing:10
    
    BoxLayout:
        orientation:'vertical'
        size_hint_y:.5
        GridLayout:
            cols:3
            Label:
                id:question
                font_size:20
                size_hint_x:.6
                text:""
                halign:'center'
                valign:'middle'
            Label:
                id:eq
                font_size:20
                size_hint_x:.1
                text:""
                halign:'center'
                valign:'middle'
            Label:
                id:answerss
                font_size:20
                size_hint_x:.3
                text:""
                halign:'center'
                valign:'middle'
        Calc_Input:
            id: display
            font_size: 25
            size_hint_y:0.5
            halign:'center'
            valign:'middle'
            text:""
    BoxLayout:
        size_hint_y:0.5
        spacing:10
        GridLayout:
            id: nums
            cols:3
            spacing:5
            
            
        BoxLayout:
            spacing:5
            id: syms
            orientation:'vertical'
            GridLayout:
                spacing:5
                id: other_sym
                cols:3
        GridLayout:
            spacing:5
            id: one_sym
            cols:1
    BoxLayout:
        size_hint_y:.1
        Label:
            id: hack
            font_size:15
            text:""
          
            